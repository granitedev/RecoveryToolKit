<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.granitemountainbhc.recoverytoolkit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="26.0.0-alpha1" />

    <application
        android:allowBackup="true"
        android:elevation="9dp"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher_granite"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_granite"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name="com.granitemountainbhc.recoverytoolkit.MainActivity"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.granitemountainbhc.recoverytoolkit.DetailActivity"
            android:parentActivityName="com.granitemountainbhc.recoverytoolkit.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
    </application>

</manifest>