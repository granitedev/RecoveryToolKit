<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.granitemountainbhc.recoverytoolkit">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation"
        android:elevation="9dp"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher_granite"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_granite"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.DetailActivity"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity android:name=".activity.step.CiwaWithdrawalsActivity" />
        <activity android:name=".activity.step.CowsWithdrawalsActivity" />
        <activity android:name=".activity.step.WithdrawalScaleSelectActivity" />
        <activity android:name=".activity.PrivacyPolicyActivity" />
        <activity android:name=".activity.AboutUsActivity" />
        <activity android:name=".activity.step.LimitsActivity" />
        <activity android:name=".activity.step.ShameActivity" />
        <activity android:name=".activity.step.CompassionActivity" />
        <activity android:name=".activity.WorksheetsActivity" />
        <activity android:name=".activity.EbooksActivity" />
        <activity android:name=".activity.PrescreenActivity" />
        <activity android:name=".activity.IntakeActivity" />
        <activity android:name=".activity.HandbookActivity" />
        <activity android:name=".activity.ChatActivity" />
        <activity android:name=".activity.UserProfile" />
        <activity android:name=".activity.step.StyledProgressBarActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>